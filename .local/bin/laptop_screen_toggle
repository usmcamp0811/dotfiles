#!/bin/sh

CURRENT_OBD=$(xrandr | awk '/connected/ && /[[:digit:]]x[[:digit:]].*+/{print $1}' | awk '{if($1 == "eDP-1") {print "on"}}')

echo $CURRENT_OBD 
if [[ "$CURRENT_OBD" == "on" ]]
then
    echo "turning off"
    xrandr --output eDP-1 --off
    xrandr --output eDP-1-1 --off
    feh ~/.background --bg-scale
else
    echo "turrning on"
    xrandr --output eDP-1 --auto
    xrandr --output eDP-1-1 --auto
    feh ~/.background --bg-scale
fi

    

